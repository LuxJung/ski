<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/textround"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:padding="5dp">

    <TextView
        android:layout_weight="1"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/textView_list_attime"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="2dp" />
    <TextView
        android:layout_weight="1"

        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/textView_list_starttime"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="2dp" />
    <TextView
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/textView_list_bar"
        android:layout_width="10dp"
        android:text="~"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_weight="1"

        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/textView_list_endtime"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="2dp"/>
    <TextView
        android:layout_weight="1"

        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/textView_list_texcost"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="2dp"/>

</LinearLayout>